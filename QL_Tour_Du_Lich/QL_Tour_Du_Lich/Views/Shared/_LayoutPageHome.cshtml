<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ETB-@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .test {
         background-color:white;
         font-size:18px;
         font-weight:bold;
	 -webkit-animation: my 700ms infinite;
	 -moz-animation: my 700ms infinite; 
	 -o-animation: my 700ms infinite; 
	 animation: my 700ms infinite;
     text-align:right;
     margin-right:10px;
}
    </style>
</head>
<body>
    <p class="test"> HotLine: 0397611751</p>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ETB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#">Giới thiệu</a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Trong nước
                            @if ((List<string>)@Session["DSThanhPhoTrongNuoc"] != null)
                            {
                                <span class="caret"></span>
                            }
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var x in (List<string>)@Session["DSThanhPhoTrongNuoc"])
                            {
                                <li>
                                    @Html.ActionLink(x, "QueryTrongNuoc", new { tp = x })
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Ngoài nước
                            @if ((List<string>)@Session["DSThanhPhoNgoaiNuoc"] != null)
                            {
                                <span class="caret"></span>
                            }
                        </a>
                        <ul class="dropdown-menu">
                            @foreach (var x in (List<string>)@Session["DSThanhPhoNgoaiNuoc"])
                            {
                                <li>
                                    @Html.ActionLink(x, "QueryNgoaiNuoc", new { tp = x })
                                </li>
                            }
                        </ul>
                    </li>
                    <li><a href="/TaiKhoan/DangKy"><span class="glyphicon glyphicon-user"></span> Đăng ký</a></li>
                    <li><a href="/TaiKhoan/DangNhap"><span class="glyphicon glyphicon-log-in"></span> Đăng nhập</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container" id="heaerofpage">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <a href="#" class="text-center">
                        <img src="~/ImageHeader/Bia1.png" alt="Hình mẫu 1">
                    </a>
                </div>

                <div class="item">
                    <a href="#">
                        <img src="~/ImageHeader/bia3.jpg" alt="Hình nẫu 3">
                    </a>
                </div>

                <div class="item">
                    <a>
                        <img src="~/ImageHeader/bia4.jpg" alt="Hình mẫu 4">
                    </a>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container body-content">
        <div class="container">
            <div class="row">
                @*Lọc theo các mức giá*@
                <div class="col-md-3">
                    <table class="table">
                        <tr>
                            <th><h2>Mức giá</h2></th>
                        </tr>
                        <tr>
                            <td>
                                <h4>@Html.ActionLink("Từ 2tr đến 3tr500", "QueryGia", new { id = 1 })</h4>
                                
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>@Html.ActionLink("Từ 3tr500 đến 5tr", "QueryGia", new { id = 2 })</h4>
                                
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>@Html.ActionLink("Từ 5tr đến 6tr500", "QueryGia", new { id = 3 })</h4>
                                
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>@Html.ActionLink("Từ 6tr500 đến 8tr", "QueryGia", new { id = 4 })</h4>
                                
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>
                                    @Html.ActionLink("Trên 8tr", "QueryGia", new { id = 5 })
                                </h4>
                                
                            </td>
                        </tr>
                    </table>
                </div>
                @*Hiển thị danh sách tour hiện có*@
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </div>
        @*@RenderBody()*@
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team 2 KTPM11A</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>